<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickGo.Views.RegistroPage"
             Title="RegistroPage">
    <Grid>

       
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="Gray" Offset="0.0"/>
                <GradientStop Color="Gainsboro" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

       
        <Frame Margin="20"
               Padding="25"
               BackgroundColor="White"
               CornerRadius="30"
               HasShadow="True">

            <VerticalStackLayout Spacing="45">

                <Label Text="Crear Cuenta"
                       FontSize="26"
                       TextTransform="Uppercase"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Black" />

                <Label Text="Regístrate para continuar"
                       FontSize="16"
                       TextTransform="Uppercase"
                       HorizontalOptions="Center"
                       TextColor="#666" />

                <BoxView HeightRequest="1" Color="#ddd" />

                
                <Entry x:Name="txtNombre"
                       Placeholder="Nombre Completo"
                       BackgroundColor="#F0F0F0"
                       TextColor="Black"
                       HeightRequest="50"
                      />

                <Entry x:Name="txtTelefono"
                       Placeholder="Número de teléfono"
                       Keyboard="Telephone"
                       TextColor="Black"
                       BackgroundColor="#F0F0F0"
                       HeightRequest="50"
                      />

                <Entry x:Name="txtPassword"
                       Placeholder="Contraseña"
                       IsPassword="True"
                      
                       BackgroundColor="#F0F0F0"
                       HeightRequest="50"
                       />

               
                <Button Text="Registrar"
                        BackgroundColor="Green"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        TextTransform="Uppercase"
                        Clicked="Registrar_Cliked"/>
                <BoxView HeightRequest="1" Color="#ddd" />


            </VerticalStackLayout>

        </Frame>

    </Grid>

</ContentPage>