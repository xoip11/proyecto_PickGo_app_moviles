<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickGo.Views.CatalogoPage"
             Title="CatalogoPage">
    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="Gray" Offset="0.0"/>
                <GradientStop Color="Gainsboro" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <VerticalStackLayout Padding="10">
           
                <CollectionView x:Name="ListaTiendas" ItemsSource="{Binding Tiendas}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray" Margin="10" Padding="10" CornerRadius="10">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Nombre}" FontSize="22" />
                                    <HorizontalStackLayout Spacing="10">
                                    <Button Text=" Favorito"  BackgroundColor="Red" Padding="20,0" TextTransform="Uppercase" />

                                    <Button Text=" Agregar" BackgroundColor="ForestGreen" Padding="20,0" TextTransform="Uppercase"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <HorizontalStackLayout Padding="10" Spacing="15" HorizontalOptions="Center">
                <Button Text=" Carrito" Clicked="IrCarrito_Clicked" BackgroundColor= "Gray" Padding="25,15" TextColor="Black" TextTransform="Uppercase"/>
                <Button Text=" Perfil " Clicked="IrPerfil_Clicked" BackgroundColor= "Gray" Padding="26,20" TextColor="Black" TextTransform="Uppercase" />
                </HorizontalStackLayout>
            </VerticalStackLayout>


    </Grid>
</ContentPage>