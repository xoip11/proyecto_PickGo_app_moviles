<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickGo.Views.CatalogoPage"
             Title="CatalogoPage">
    <VerticalStackLayout>
        <CollectionView x:Name="ListaTiendas" ItemsSource="{Binding Tiendas}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Margin="10" Padding="10" CornerRadius="10">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}" FontSize="20" />
                            <HorizontalStackLayout Spacing="10">
                                <Button Text=" Favorito" />
                                <Button Text=" Agregar" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Padding="10" Spacing="15" HorizontalOptions="Center">
            <Button Text=" Carrito" Clicked="IrCarrito_Clicked" />
            <Button Text=" Perfil" Clicked="IrPerfil_Clicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>