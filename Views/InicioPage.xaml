<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickGo.Views.InicioPage"
             Title="PICKGO" >


    <Grid RowDefinitions=".3*,.7*">
        <Image Aspect="AspectFill" Source="tienda.jpg"/>
        <Grid BackgroundColor="red" Opacity=".7"/>
        <Grid ColumnDefinitions="*,*">
            <Image Source="logo.png"
             HeightRequest="120"
             WidthRequest="120"
             Aspect="AspectFit"
             Margin="0,10"
              HorizontalOptions="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2"
            CornerRadius="30,30,0,0"
             Fill="White"/>
            
            <VerticalStackLayout Margin="30,0,30,0">
                <Label
                  FontAttributes="Bold"
                  FontFamily="bold"
                  FontSize="Medium"
                   Text="Bienvenido"
                  TextColor="#2D2D2D"/>

                <Label 
                    FontFamily="medium"
                    Text="Inicia sesion"
                    TextColor="#A3A3A3"/>

                <Entry x:Name="txtTelefono"
                       Placeholder="Número de teléfono"
                       TextColor="Black"
                       Keyboard="Telephone"
                       HeightRequest="50"
                       BackgroundColor="#F0F0F0"
                      />

                <Entry x:Name="txtPassword"
                       Placeholder="Contraseña"
                       IsPassword="True"
                       TextColor="Black"
                       HeightRequest="50"
                       BackgroundColor="#F0F0F0"
                        />


                <Button Text="Continuar"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="20"
                        HeightRequest="55"
                        TextTransform="Uppercase"
                        Clicked="Continuar_Clicked"/>

                <Label 
                      Margin="0,20,0,-10"
                      HorizontalOptions="Center"
                      Text="¿No tienes una cuenta?"
                        TextColor="Blue"
                    TextDecorations="Underline"/>
                <Button Margin="0,30,0,0"   
                    Text="Registrarse"
                        BackgroundColor="#FBFBFB"
                        HeightRequest="60"
                        TextTransform="Uppercase"
                        TextColor="Red"
                        Clicked="Registrarse_Clicked"/>
                     
            </VerticalStackLayout>
        </Grid>
    </Grid>



</ContentPage>
    