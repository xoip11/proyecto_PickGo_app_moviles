<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickGo.Views.InicioPage"
             Title="PICKGO">


    <Grid>
       
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FF3B30" Offset="0.0"/>
                <GradientStop Color="#C62828" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

     
        <Frame Margin="20"
               Padding="25"
               BackgroundColor="White"
               CornerRadius="30"
               HasShadow="True">

            <VerticalStackLayout Spacing="15">

                <Label Text="Bienvenido a Pick Go"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#333" />

                <Label Text="Inicia sesión para continuar"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="#666" />

                <BoxView HeightRequest="1" Color="#ddd" />

               
                <Entry x:Name="txtTelefono"
                       Placeholder="Número de teléfono"
                       TextColor="Black"
                       Keyboard="Telephone"
                       HeightRequest="50"
                       BackgroundColor="#F0F0F0"
                      />

                <Entry x:Name="txtPassword"
                       Placeholder="Contraseña"
                       IsPassword="True"
                       TextColor="Black"
                       HeightRequest="50"
                       BackgroundColor="#F0F0F0"
                        />

              
                <Button Text="Continuar"
                        BackgroundColor="Green"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="Continuar_Clicked"/>

              
                <Button Text="Registrarse"
                        BackgroundColor="Transparent"
                        TextColor="Blue"
                        BorderColor="Black"
                        BorderWidth="1"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="Registrarse_Clicked"/>

            </VerticalStackLayout>

        </Frame>
    </Grid>
</ContentPage>
    